mixin navbar-top-link(url, title)
    li(class="#{ menuActiveItem === url ? 'active' : '' }")
        a(href="#{url}/")= title

nav.navbar.navbar-default.navbar-fixed-top.wmhc-navbar-top
    .container

        .navbar-header
            button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar

            a.navbar-brand(href="/").logo
                img(src="/assets/img/wmhc-logo.svg")
            a.navbar-brand(href="/") Wase Model Helicopter Club

        .navbar-collapse.collapse#navbar
            ul.nav.navbar-nav.navbar-right
                li(class="#{ menuActiveItem === 'index' ? 'active' : '' }")
                    a(href="/") Home
                +navbar-top-link('club', 'Club')
                //+navbar-top-link('symposium/2017', 'Symposium')
                +navbar-top-link('fotos', 'Fotos')
                +navbar-top-link('reglement', 'Reglement')
